<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Megaman" Height="624" Width="800" PreviewKeyDown="KeyDown" PreviewKeyUp="KeyUp">
    <Grid>
        <Canvas x:Name="canvas" HorizontalAlignment="Center" Height="600" VerticalAlignment="Center" Width="800" Margin="0,0,0,0" Background="White"/>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Game">
                    <MenuItem Header="_Start(R)" Click="MenuItem_Click2"/>
                    <MenuItem Header="_Restart(R)" Click="MenuItem_Click"/>
                    <MenuItem Header="_Close(C)" Click="MenuItem_Click_1"/> 
                </MenuItem>
                <MenuItem Header="_Other" Click="MenuItem_Click">
                    <MenuItem x:Name="MenuAbout" Header="_About(A)" Click="MenuAbout_Click"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
    </Grid>
    
</Window>
